{
	"devDependencies": {
		"babel-eslint": "7.2.3",
		"eslint": "4.3.0",
		"eslint-plugin-import": "2.7.0",
		"husky": "0.14.3",
		"lerna": "2.0.0",
		"lint-staged": "4.0.2",
		"prettier": "1.5.3"
	},
	"engines": {
		"node": ">= 4"
	},
	"scripts": {
		"lint": "eslint packages",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.js": [
			"prettier --write --tab-width 4 --use-tabs --no-semi --single-quote --trailing-comma es5",
			"eslint",
			"git add"
		],
		"*.json": ["prettier --write --tab-width 4 --use-tabs", "git add"]
	}
}
