{
	"devDependencies": {
		"babel-eslint": "7.2.3",
		"eslint": "4.1.1",
		"eslint-plugin-import": "2.6.0",
		"husky": "0.14.1",
		"lerna": "2.0.0-rc.5",
		"lint-staged": "4.0.0",
		"prettier": "1.5.2"
	},
	"engines": {
		"node": ">= 4"
	},
	"scripts": {
		"lint": "eslint packages",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.js": [
			"prettier --write --tab-width 4 --use-tabs --no-semi --single-quote --trailing-comma es5 --",
			"eslint",
			"git add"
		]
	}
}
